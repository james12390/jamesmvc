@model IEnumerable<jamesmvc.Models.UnassignedOrderStatViewModel>
@{
    ViewData["Title"] = "未指派訂單統計（依縣市）";
}
<style>
main {
            padding-top: 100px !important;
            min-height: 100vh;
        }
</style>
<h2>@ViewData["Title"]</h2>
<main>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>縣市</th>
            <th>未指派數量</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.City</td>
                <td>@item.Count</td>
                <td>
                    <a asp-action="UnassignedList" asp-route-city="@item.City" class="btn btn-sm btn-primary">查看訂單</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</main>