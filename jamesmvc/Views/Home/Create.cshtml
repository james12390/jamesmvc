                    <div class="form-group full-width">
                        <label asp-for="ItemDescription">包裹描述</label>
                        <textarea id="ItemDescription" name="ItemDescription" placeholder="包裹內容簡述（選填）" asp-for="ItemDescription"></textarea>
                        <span asp-validation-for="ItemDescription" class="text-danger" />
                    </div>
                </div>
            </div>

            <div class="form-section">
