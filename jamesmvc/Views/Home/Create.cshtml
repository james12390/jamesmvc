                        <input type="date" id="DeliveryDate" name="DeliveryDate" asp-for="DeliveryDate" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        <span asp-validation-for="DeliveryDate" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="DeliveryTimeSlot">希望配送時間</label>
                        <select  asp-for="DeliveryTimeSlot" id="DeliveryTimeSlot" name="DeliveryTimeSlot">
                            <option value="">任何時間</option>
                            <option value="morning">上午 (9AM - 12PM)</option>
                            <option value="afternoon">下午 (12PM - 5PM)</option>
                            <option value="evening">晚上 (5PM - 8PM)</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group full-width">
                        <label>配送優先級</label>
                        <div class="priority-options">
                            <div class="priority-option">
                                <input type="radio" id="standard" name="Priority" value="standard" checked>
                                <label asp-for="Priority">標準</label>
                            </div>
                            <div class="priority-option">
                                <input type="radio" id="express" name="Priority" value="express">
                                <label asp-for="Priority">快速</label>
                            </div>
                            <div class="priority-option">
                                <input type="radio" id="urgent" name="Priority" value="urgent">
                                <label asp-for="Priority">緊急</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="checkbox-group">
                    <input type="checkbox" id="SignatureRequired" name="SignatureRequired">
                    <label for="SignatureRequired">配送時需要簽名確認</label>
                </div>
            </div>

            <div class="form-section">
                <h3 class="section-title">附加資訊</h3>
                <div class="form-row">
                    <div class="form-group full-width">
                        <label asp-for="Description">特殊指示</label>
                        <textarea id="Description" name="Description" placeholder="任何特殊處理指示或配送備註"></textarea>
                    </div>
                </div>
            </div>

            <div class="submit-section">
                <button type="submit" class="submit-btn">提交宅配訂單</button>
            </div>
        </form>
    </div>
</div>

    @if (!ViewData.ModelState.IsValid)
