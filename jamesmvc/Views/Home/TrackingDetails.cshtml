@model jamesmvc.Models.LogisticsTrackingViewModel
@Model.Order.OrderNumber
@{
    Layout = null;
    var scheme = Context?.Request?.Scheme ?? "https";
    var fullUrl = Url.Action("Search", "LEGO", new { orderNumber = Model.Order.OrderNumber }, scheme);
}
<title>物流追蹤詳情 - James宅配</title>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        color: #333;
        overflow-x: hidden;
    }

    /* Header */
    header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        padding: 10px 0;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .logo {
        font-size: 28px;
        font-weight: bold;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .nav-links {
        display: flex;
        list-style: none;
        gap: 30px;
    }

        .nav-links a {
            text-decoration: none;
            color: #333;
            font-weight: 500;
            position: relative;
        }

            .nav-links a:hover {
                color: #667eea;
            }

            .nav-links a::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -5px;
                left: 0;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            }

            .nav-links a:hover::after {
                width: 100%;
            }

            .nav-links a.active {
                color: #667eea;
            }

                .nav-links a.active::after {
                    width: 100%;
                }


    /* Main Content */
    main {
        margin-top: 80px;
        padding: 40px 20px;
        min-height: calc(100vh - 80px);
        display: flex;
        align-items: flex-start;
        justify-content: center;
    }

    .container {
        max-width: 900px;
        width: 100%;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .header-section {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        padding: 50px 40px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .header-section h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 15px;
            position: relative;
            z-index: 1;
        }

        .header-section p {
            font-size: 1.2rem;
            opacity: 0.9;
            position: relative;
            z-index: 1;
        }

    .content-section {
        padding: 40px;
    }

    /* Info Table */
    .info-table {
        background: white;
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid #e1e5e9;
    }

        .info-table h3 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.3rem;
            border-bottom: 2px solid #4facfe;
            padding-bottom: 10px;
        }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: 600;
        color: #555;
        min-width: 120px;
    }

    .info-value {
        color: #333;
        flex: 1;
        text-align: right;
    }

    /* Progress Steps */
    .progress-section {
        background: white;
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid #e1e5e9;
    }

        .progress-section h3 {
            color: #333;
            margin-bottom: 30px;
            font-size: 1.3rem;
            border-bottom: 2px solid #4facfe;
            padding-bottom: 10px;
        }

    .progress-step {
        display: flex;
        justify-content: space-between;
        margin-bottom: 30px;
        position: relative;
    }

    .step {
        flex: 1;
        text-align: center;
        position: relative;
    }

        .step::before {
            content: '';
            position: absolute;
            top: 15px;
            left: -50%;
            height: 4px;
            width: 100%;
            background-color: #e1e5e9;
            z-index: 1;
        }

        .step:first-child::before {
            display: none;
        }

        .step.active::before {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

    .step-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #e1e5e9;
        margin: 0 auto;
        line-height: 40px;
        color: white;
        font-weight: 600;
        position: relative;
        z-index: 2;
    }

    .step.active .step-circle {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        box-shadow: 0 5px 15px rgba(79, 172, 254, 0.3);
    }

    .step-label {
        margin-top: 10px;
        font-size: 0.9rem;
        color: #666;
    }

    .step.active .step-label {
        font-weight: 600;
        color: #4facfe;
    }

    /* Current Status */
    .current-status {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 30px;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

        .current-status h4 {
            font-size: 1.1rem;
            margin-bottom: 10px;
            opacity: 0.9;
        }

        .current-status .status-text {
            font-size: 1.5rem;
            font-weight: 700;
        }

    /* Tracking Records */
    .tracking-records {
        background: white;
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid #e1e5e9;
    }

        .tracking-records h3 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.3rem;
            border-bottom: 2px solid #4facfe;
            padding-bottom: 10px;
        }

    .record-item {
        padding: 20px;
        border-left: 4px solid #4facfe;
        margin-bottom: 15px;
        background: #f8f9fa;
        border-radius: 0 10px 10px 0;
        position: relative;
    }

        .record-item:last-child {
            margin-bottom: 0;
        }

    .record-status {
        font-weight: 600;
        color: #333;
        font-size: 1.1rem;
        margin-bottom: 5px;
    }

    .record-details {
        color: #666;
        font-size: 0.9rem;
    }

    .record-time {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        background: white;
        padding: 5px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        color: #666;
        border: 1px solid #e1e5e9;
    }

    /* QR Code Section */
    .qr-section {
        background: white;
        border-radius: 15px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid #e1e5e9;
    }

        .qr-section h3 {
            color: #333;
            margin-bottom: 20px;
            font-size: 1.3rem;
        }

    .qr-code {
        display: inline-block;
        padding: 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        border: 2px solid #f0f0f0;
    }

        .qr-code img {
            display: block;
            border-radius: 10px;
        }

    .qr-description {
        margin-top: 15px;
        color: #666;
        font-size: 0.9rem;
    }

    /* No Records Message */
    .no-records {
        text-align: center;
        padding: 40px;
        color: #666;
        font-size: 1.1rem;
    }

        .no-records::before {
            content: '📦';
            display: block;
            font-size: 3rem;
            margin-bottom: 15px;
        }

</style>

<header>
    <nav>
        <div class="logo">James宅配</div>
        <ul class="nav-links">
            <li><a asp-area="" asp-controller="Home" asp-action="Homepage">首頁</a></li>
            <li><a href="#">會員登入</a></li>
            <li><a href="#" class="active">包裹查詢</a></li>
        </ul>
    </nav>
</header>

<main>
    <div class="container">
        <div class="header-section">
            <h1>📦 物流追蹤詳情</h1>
            <p>詳細的包裹配送狀態和歷史記錄</p>
        </div>

        <div class="content-section">
            <!-- 基本資訊 -->
            <div class="info-table">
                <h3>📋 基本資訊</h3>
                <div class="info-row">
                    <div class="info-label">物流單號</div>
                    <div class="info-value"><td class="info-value">@Model.Order.OrderNumber</td></div>
                </div>
                <div class="info-row">
                    <div class="info-label">收件人</div>
                    <td class="info-value">@Model.Order.ReceiverName</td>
                </div>
                <div class="info-row">
                    <div class="info-label">寄件人</div>
                    <td class="info-value">@Model.Order.SenderName</td>
                </div>
                <div class="info-row">
                    <div class="info-label">預計配送日</div>
                    <td class="info-value">@Model.Order.DeliveryDate.ToString("yyyy-MM-dd")</td>
                </div>
            </div>

            <!-- 目前狀態 -->
            @{
                var latestStatus = Model.TrackingRecords.FirstOrDefault()?.Status ?? "";
                Func<string, bool> isActive = (statusName) =>
                {
                    var order = new List<string> { "已接單", "已出發", "配送中", "已簽收" };
                    var currentIndex = order.IndexOf(latestStatus);
                    var thisIndex = order.IndexOf(statusName);
                    return thisIndex >= 0 && thisIndex <= currentIndex;
                };
            }
            <div class="current-status">
                <h4>目前狀態</h4>
                <div class="status-text"><strong>@latestStatus</strong></div>
            </div>

            <!-- 配送進度 -->
            <div class="progress-section">
                <h3>🚚 配送進度</h3>
                <div class="progress-step">
                    <div class="step @(isActive("已接單") ? "active" : "")">
                        <div class="step-circle">1</div>
                        <div class="step-label">已接單</div>
                    </div>
                    <div class="step @(isActive("已出發") ? "active" : "")">
                        <div class="step-circle">2</div>
                        <div class="step-label">已出發</div>
                    </div>
                    <div class="step @(isActive("配送中") ? "active" : "")">
                        <div class="step-circle">3</div>
                        <div class="step-label">配送中</div>
                    </div>
                    <div class="step @(isActive("已簽收") ? "active" : "")">
                        <div class="step-circle">4</div>
                        <div class="step-label">已簽收</div>
                    </div>
                </div>
            </div>

            <!-- 追蹤記錄 -->
            <div class="tracking-records">
                <h3>📍 追蹤記錄</h3>
                @if (Model.TrackingRecords.Any())
                {
                    <ul class="list-group">
                        @foreach (var record in Model.TrackingRecords)
                        {
                            <div class="record-item">
                                <div class="record-status"><strong>@record.Status</strong></div>
                                <div class="record-details">@record.Location</div>
                                <div class="record-time"> (@record.Timestamp.ToString("yyyy-MM-dd HH:mm"))</div>
                            </div>
                        }
                    </ul>
                }
                else
                {
                    <p>尚無追蹤紀錄。</p>
                }
            </div>

            <!-- QR碼 -->
            <!--<div class="qr-section">
                <h3>📱 快速查詢QR碼</h3>
                <div class="qr-code">
                    <img src="https://api.qrserver.com/v1/create-qr-code/?data=https://example.com/tracking/JM123456789&size=150x150" alt="QR Code">
                </div>
                <div class="qr-description">
                    掃描此QR碼可快速查詢包裹狀態
                </div>
            </div>-->
        </div>
    </div>
</main>

