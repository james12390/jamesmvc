@model jamesmvc.Models.LogisticsOrderssViewModel
@{
    ViewData["Title"] = "訂單成立成功";
}

<style>
    .confirmation-container {
        min-height: calc(100vh - 140px);
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        position: relative;
        overflow: hidden;
    }

    /* 動畫背景元素 */
    .bg-animation {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 1;
    }

    .bg-circle {
        position: absolute;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        animation: float 6s ease-in-out infinite;
    }

    .bg-circle:nth-child(1) {
        width: 100px;
        height: 100px;
        top: 20%;
        left: 10%;
        animation-delay: 0s;
    }

    .bg-circle:nth-child(2) {
        width: 150px;
        height: 150px;
        top: 60%;
        right: 10%;
        animation-delay: 2s;
    }

    .bg-circle:nth-child(3) {
        width: 80px;
        height: 80px;
        bottom: 20%;
        left: 20%;
        animation-delay: 4s;
    }

    .bg-circle:nth-child(4) {
        width: 120px;
        height: 120px;
        top: 10%;
        right: 30%;
        animation-delay: 1s;
    }


    /* 成功卡片 */
    .success-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        padding: 40px;
        width: 100%;
        max-width: 800px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        position: relative;
        z-index: 10;
        animation: slideUp 0.8s ease;
    }


    /* 標題區域 */
    .success-header {
        text-align: center;
        margin-bottom: 35px;
    }

    .success-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        animation: checkPulse 2s ease-in-out infinite;
    }


    .success-icon::before {
        content: '✓';
        color: white;
        font-size: 36px;
        font-weight: bold;
    }

    .success-title {
        font-size: 32px;
        font-weight: bold;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 10px;
    }

    .success-subtitle {
        color: #666;
        font-size: 16px;
        margin-bottom: 30px;
    }

    /* 訂單資訊卡片 */
    .order-info {
        background: #f8fafc;
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
        border: 1px solid #e2e8f0;
    }

    .order-info h3 {
        color: #1e293b;
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .order-info h3::before {
        content: '📦';
        font-size: 24px;
    }

    /* 訂單詳情表格 */
    .order-details {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .detail-item {
        background: white;
        padding: 20px;
        border-radius: 12px;
        border-left: 4px solid #667eea;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .detail-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .detail-label {
        font-size: 14px;
        font-weight: 600;
        color: #64748b;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .detail-value {
        font-size: 18px;
        font-weight: 600;
        color: #1e293b;
        word-break: break-all;
    }

    /* 特殊樣式 */
    .detail-item.highlight {
        border-left-color: #10b981;
        background: linear-gradient(135deg, #ecfdf5 0%, #f0fdf4 100%);
    }

    .detail-item.highlight .detail-value {
        color: #059669;
    }

    /* 行動按鈕區域 */
    .action-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 15px 30px;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 30px rgba(102, 126, 234, 0.3);
        text-decoration: none;
        color: white;
    }

    .btn-secondary {
        background: white;
        color: #667eea;
        padding: 15px 30px;
        border: 2px solid #667eea;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-secondary:hover {
        background: #667eea;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.2);
        text-decoration: none;
    }

    /* 重要提示 */
    .important-note {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        border: 1px solid #f59e0b;
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .important-note::before {
        content: '💡';
        font-size: 20px;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .important-note-content {
        flex: 1;
    }

    .important-note h4 {
        color: #92400e;
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .important-note p {
        color: #a16207;
        font-size: 14px;
        margin: 0;
        line-height: 1.5;
    }

    /* 響應式設計 */

</style>

<div class="confirmation-container">
    <div class="bg-animation">
        <div class="bg-circle"></div>
        <div class="bg-circle"></div>
        <div class="bg-circle"></div>
        <div class="bg-circle"></div>
    </div>

    <div class="success-card">
        <div class="success-header">
            <div class="success-icon"></div>
            <h1 class="success-title">訂單成立成功！</h1>
            <p class="success-subtitle">您的物流單已成功建立，我們將盡快為您安排配送服務</p>
        </div>

        <div class="important-note">
            <div class="important-note-content">
                <h4>重要提醒</h4>
                <p>請保存您的訂單號碼，您可以使用此號碼查詢配送狀態。我們會在包裹配送前透過簡訊或電話通知您。</p>
            </div>
        </div>

        <div class="order-info">
            <h3>訂單詳細資訊</h3>
            <div class="order-details">
                <div class="detail-item highlight">
                    <div class="detail-label">物流單號</div>
                    <div class="detail-value">@Model.Order.OrderNumber</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">收件人</div>
                    <div class="detail-value">@Model.Order.ReceiverName</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">寄件人</div>
                    <div class="detail-value">@Model.Order.SenderName</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">預計配送日</div>
                    <div class="detail-value">@Model.Order.DeliveryDate.ToString("yyyy年MM月dd日")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">配送時段</div>
                    <div class="detail-value">@Model.Order.DeliveryTimeSlot</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">包裹大小</div>
                    <div class="detail-value">@Model.Order.PackageSize</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">配送優先級</div>
                    <div class="detail-value">@Model.Order.Priority</div>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-controller="LEGO" asp-action="Index" class="btn-primary">
                🏠 返回首頁
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn-secondary">
                📦 查詢包裹
            </a>
        </div>
    </div>
</div>