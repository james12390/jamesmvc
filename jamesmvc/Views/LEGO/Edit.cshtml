@model jamesmvc.Models.CustomerProfile
@{
    ViewData["Title"] = "編輯個人資料";
}

<h2>編輯個人資料</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Edit"asp-controller="LEGO" method="post">
    <input type="hidden" asp-action="Edit"asp-controller="LEGO" asp-for="Id" />
    <input type="hidden" asp-action="Edit"asp-controller="LEGO" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">儲存變更</button>
</form>